      }
    },
    {
      "cell_type": "code",
      "source": [
        "def process_result(result):\n",
        "  print(result['answer'])\n",
        "  print(\"\\n\\n Sources : \",result['sources'] )\n",
        "  print(result['sources'])"
      ],
      "metadata": {
